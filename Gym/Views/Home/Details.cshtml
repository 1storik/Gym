@model Membership
@using Gym.Utility

<div class="">
    <form method="post">
      <input asp-for="@Model.Id" hidden/>
        <div class="container backgroundWhite pt-4"  >
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.MembershipType</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning" >@((Model.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePathMember@Model.Image" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <a asp-controller="Coach" asp-action="Details" asp-route-id="@Model.Coach.Id">
                                            <div class="col-6">
                                                <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.Coach.FirstName @Model.Coach.LastName</span>
                                            </div>
                                        </a>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Text)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}