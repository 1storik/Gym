@using Gym.Utility
@model Gym.VM.MembershipVM

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Membership.Id" hidden />
    <div class="border p-3 bg-white">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Membership</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Membership.MembershipType"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Membership.MembershipType" class="form-control" />
                        <span asp-validation-for="Membership.MembershipType" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Membership.Coach.Id"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Membership.Coach.Id" asp-items="@Model.Coach" class="form-select">
                            <option disabled selected>--Select Type--</option>
                        </select>
                        <span asp-validation-for="Membership.Coach.Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Membership.Text"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Membership.Text" class="form-control summernote"></textarea>
                        <span asp-validation-for="Membership.Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Membership.ShortText"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Membership.ShortText" class="form-control" />
                        <span asp-validation-for="Membership.ShortText" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Membership.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Membership.Price" class="form-control" />
                        <span asp-validation-for="Membership.Price" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox1" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">
                <img src="@WC.ImagePathMember@Model.Membership.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>

</form>