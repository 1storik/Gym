@using Gym.Utility
@model Coach

@section scripts
    {
    <style>
        .enlarge-on-hover:hover {
            box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
            cursor: pointer;
        }
    </style>
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Coach Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="@WC.ImagePathCoach@Model.Image" alt="Card image cap" class="img-fluid rounded enlarge-on-hover" data-toggle="modal" data-target="#imageModal">
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                    <p class="card-text">Email: @Model.Email</p>
                    <p class="card-text">Phone: @Model.Phone</p>
                    <p class="card-text">Specialization: @Model.Specialization</p>
                    <p class="card-text">Employment of Date: @Model.EmploymentDate.ToString("dd.MM.yyyy")</p>
                    <div class="mt-5">
                        <a asp-controller="Coach" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="Coach" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger mx-2">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="post-details mt-2 d-flex justify-content-between">
                <span class="align-self-start">Coach ID: @Model.Id</span>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img src="@WC.ImagePathCoach@Model.Image" alt="Coach Image" class="img-fluid">
            </div>
        </div>
    </div>
</div>

